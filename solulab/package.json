{
    "name": "solulab",
    "version": "0.0.3",
    "type": "module",
    "description": "Define, run, store and visualise solution laboratories",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "solulab": "bin/solulab.js"
    },
    "files": [
        "bin",
        "dist",
        "README.md",
        "LICENSE"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "scripts": {
        "// Development": "",
        "dev": "vite",
        "cli": "bun run src/cli/index.ts",
        "// Testing": "",
        "test": "bun run typecheck && bun test",
        "test:watch": "bun test --watch",
        "// Building": "",
        "build": "bun run clean && bun run typecheck && bun run build:lib && bun run build:ui",
        "build:lib": "tsup",
        "build:ui": "vite build",
        "build:watch": "tsup --watch",
        "clean": "rm -rf dist",
        "// Code Quality": "",
        "typecheck": "tsc --noEmit",
        "tswatch": "tsc --noEmit --watch",
        "// Publishing": "",
        "prepublishOnly": "bun run typecheck && bun test && bun run build",
        "preversion": "bun run test",
        "postversion": "git push && git push --tags"
    },
    "keywords": [
        "eval",
        "testing",
        "metrics",
        "typescript",
        "cli"
    ],
    "author": "debuglebowski",
    "repository": {
        "type": "git",
        "url": "https://github.com/debuglebowski/solulab"
    },
    "homepage": "https://github.com/debuglebowski/solulab#readme",
    "bugs": {
        "url": "https://github.com/debuglebowski/solulab/issues"
    },
    "license": "MIT",
    "dependencies": {
        "chalk": "^5.5.0",
        "commander": "^13.1.0",
        "cosmiconfig": "^9.0.0",
        "glob": "^11.0.3",
        "lowdb": "^7.0.1",
        "open": "^10.2.0",
        "zod": "^4.0.15"
    },
    "devDependencies": {
        "@inquirer/prompts": "^7.8.0",
        "@radix-ui/react-select": "^2.2.5",
        "@types/bun": "latest",
        "@types/diff": "^7.0.2",
        "@types/react": "^19.1.9",
        "@types/react-dom": "^19.1.7",
        "@vitejs/plugin-react": "^4.7.0",
        "autoprefixer": "^10.4.21",
        "clsx": "^2.1.1",
        "diff": "^7.0.0",
        "execa": "^9.6.0",
        "postcss": "^8.5.6",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-router-dom": "^7.7.1",
        "tailwindcss": "^3.4.17",
        "tsup": "^8.5.0",
        "vite": "^6.3.5"
    },
    "engines": {
        "bun": ">=1.0.0"
    },
    "publishConfig": {
        "access": "public"
    }
}
