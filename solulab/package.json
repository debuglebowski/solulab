{
    "name": "solulab",
    "version": "0.0.1",
    "type": "module",
    "description": "Define, run, store and visualise solution laboratories",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "solulab": "./bin/solulab.js"
    },
    "files": [
        "bin",
        "dist",
        "README.md",
        "LICENSE"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "scripts": {
        "// Development": "",
        "dev": "vite",
        "cli": "bun run src/cli/index.ts",
        "// Testing": "",
        "test": "bun run typecheck && bun test",
        "test:watch": "bun test --watch",
        "// Building": "",
        "build": "bun run clean && bun run typecheck && bun run build:lib && bun run build:ui",
        "build:lib": "tsup",
        "build:ui": "vite build",
        "clean": "rm -rf dist",
        "// Code Quality": "",
        "typecheck": "tsc --noEmit",
        "// Publishing": "",
        "prepublishOnly": "bun run typecheck && bun test && bun run build",
        "preversion": "bun run test",
        "postversion": "git push && git push --tags",
        "release:patch": "bun version patch",
        "release:minor": "bun version minor",
        "release:major": "bun version major",
        "release:dry": "node scripts/publish.js --dry-run",
        "publish:patch": "node scripts/publish.js --version=patch --no-dry-run",
        "publish:dry": "node scripts/publish.js"
    },
    "keywords": [
        "eval",
        "testing",
        "metrics",
        "typescript",
        "cli"
    ],
    "author": "Your Name <your.email@example.com>",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/yourusername/solulab.git"
    },
    "homepage": "https://github.com/yourusername/solulab#readme",
    "bugs": {
        "url": "https://github.com/yourusername/solulab/issues"
    },
    "license": "MIT",
    "dependencies": {
        "chalk": "^5.4.1",
        "commander": "^13.0.0",
        "cosmiconfig": "^9.0.0",
        "glob": "^11.0.0",
        "lowdb": "^7.0.1",
        "open": "^10.2.0",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@radix-ui/react-select": "^2.1.4",
        "@types/bun": "latest",
        "@types/diff": "^7.0.0",
        "@types/react": "^19.0.3",
        "@types/react-dom": "^19.0.2",
        "@vitejs/plugin-react": "^4.3.4",
        "autoprefixer": "^10.4.20",
        "clsx": "^2.1.1",
        "diff": "^7.0.0",
        "postcss": "^8.5.3",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-router-dom": "^7.1.1",
        "tailwindcss": "^3.4.17",
        "tsup": "^8.5.0",
        "vite": "^6.2.3"
    },
    "engines": {
        "bun": ">=1.0.0"
    },
    "publishConfig": {
        "access": "public"
    }
}
