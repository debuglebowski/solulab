{
    "name": "solulab",
    "version": "0.1.0",
    "type": "module",
    "description": "Define, run, store and visualise solution laboratories",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "solulab": "./bin/solulab.js"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "scripts": {
        "// Development": "",
        "dev": "bun run vite",
        "cli": "bun run src/cli/index.ts",
        "cli:dev": "bun run src/cli/index.ts",
        "test": "bun run typecheck && bun test",
        "test:watch": "bun test --watch",
        "test:e2e": "vitest run --config tests/vitest.e2e.config.ts",
        "test:e2e:watch": "vitest --config tests/vitest.e2e.config.ts",
        "// Building": "",
        "build": "bun run clean && bun run typecheck && bun run check && bun run build:lib && bun run build:ui",
        "build:lib": "tsup",
        "build:ui": "vite build",
        "clean": "rm -rf dist",
        "// Code Quality": "",
        "typecheck": "tsc --noEmit",
        "format": "cd .. && biome format --write solulab",
        "format:check": "cd .. && biome format solulab",
        "lint": "bun run lint:biome && bun run lint:eslint",
        "lint:fix": "bun run lint:biome:fix && bun run lint:eslint:fix",
        "lint:biome": "cd .. && biome lint solulab",
        "lint:biome:fix": "cd .. && biome lint --write solulab",
        "lint:eslint": "cd .. && eslint solulab/src",
        "lint:eslint:fix": "cd .. && eslint --fix solulab/src",
        "// Composite Commands": "",
        "check": "bun run format:check && bun run lint && bun run typecheck",
        "check:fix": "bun run format && bun run lint:fix",
        "// CI/CD & Hooks": "",
        "ci": "bun run check && bun run test && bun run build",
        "precommit": "bun run check:fix",
        "prepublishOnly": "bun run ci"
    },
    "keywords": [
        "eval",
        "testing",
        "metrics",
        "typescript",
        "cli"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "chalk": "^5.4.1",
        "commander": "^13.0.0",
        "cosmiconfig": "^9.0.0",
        "glob": "^11.0.0",
        "lowdb": "^7.0.1",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@radix-ui/react-select": "^2.1.4",
        "@types/bun": "latest",
        "@types/diff": "^7.0.0",
        "@types/react": "^19.0.3",
        "@types/react-dom": "^19.0.2",
        "@vitejs/plugin-react": "^4.3.4",
        "autoprefixer": "^10.4.20",
        "clsx": "^2.1.1",
        "diff": "^7.0.0",
        "postcss": "^8.5.3",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-router-dom": "^7.1.1",
        "tailwindcss": "^3.4.17",
        "tsup": "^8.5.0",
        "vite": "^6.2.3",
        "vitest": "^2.1.8"
    },
    "engines": {
        "bun": ">=1.0.0"
    },
    "publishConfig": {
        "access": "public"
    }
}
