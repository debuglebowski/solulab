{
    "name": "solulab-root",
    "private": true,
    "type": "module",
    "scripts": {
        "// Installation & Setup": "",
        "install:all": "bun install && cd ./solulab && bun install && cd ../solulab-demo && bun install",
        "// Development": "",
        "dev": "cd solulab && bun run dev",
        "demo": "cd solulab-demo && bun run dev",
        "// Building": "",
        "build": "cd solulab && bun run build",
        "// Code Quality (Workspace-wide)": "",
        "format": "biome format --write .",
        "format:check": "biome format .",
        "lint": "bun run lint:biome && bun run lint:eslint",
        "lint:fix": "bun run lint:biome:fix && bun run lint:eslint:fix",
        "lint:biome": "biome lint .",
        "lint:biome:fix": "biome lint --write .",
        "lint:eslint": "eslint .",
        "lint:eslint:fix": "eslint --fix .",
        "typecheck": "cd solulab && bun run typecheck",
        "// Composite Commands": "",
        "check": "bun run format:check && bun run lint && bun run typecheck",
        "check:fix": "bun run format && bun run lint:fix",
        "// CI/CD": "",
        "ci": "bun run check && bun run test && bun run build",
        "// Publishing": "",
        "publish:patch": "cd solulab && node scripts/publish.js --version=patch --no-dry-run",
        "publish:dry": "cd solulab && node scripts/publish.js"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.1.2",
        "@eslint/js": "^9.31.0",
        "@stylistic/eslint-plugin": "^5.2.1",
        "@typescript-eslint/eslint-plugin": "^8.37.0",
        "@typescript-eslint/parser": "^8.37.0",
        "eslint": "^9.31.0",
        "eslint-config-prettier": "^10.1.8",
        "typescript": "^5.8.3"
    }
}
